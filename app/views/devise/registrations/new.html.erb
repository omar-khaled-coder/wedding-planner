
<div class="container" style ="padding:  40px 150px;  align-items:  flex-start;">

  <h2 class="text-center">Sign up</h2>
  <div>
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>

      <div class="col-12 col-md-6 form-inputs input_info2">
        <%= f.input :photo, as: :file %>

        <div class="row g-3">
          <div class="col">
            <%= f.input :first_name,
                          required: true,
                          autofocus: true,
                          input_html: { autocomplete: "first_name" },
                          label: false,
                          placeholder: "First Name"%>
          </div>

          <div class="col">
            <%= f.input :last_name,
                          required: true,
                          autofocus: true,
                          input_html: { autocomplete: "last_name" },
                          label: false,
                          placeholder: "Last Name" %>
          </div>

          <div class="no-margin">
            <%= f.input :email,
                        required: true,
                        autofocus: true,
                        input_html: { autocomplete: "email" },
                        label: false,
                        placeholder: "Email" %>
          </div>

            <div class="col-md-6 no-margin">
              <%= f.input :password,
                          required: true,
                          hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                          input_html: { autocomplete: "new-password" },
                          label: false,
                          placeholder: "Password" %>
            </div>

            <div class="col-md-6 no-margin">
              <%= f.input :password_confirmation,
                          required: true,
                          input_html: { autocomplete: "new-password" },
                          label: false,
                          placeholder: "Confirm Password" %>
            </div>
        </div>
    </div>
    <div class="form-actions text-center d-flex justify-content-center";>
      <%= f.button :submit, "Sign up", class: "button-red" %>
    </div>
    <br>
  <% end %>

  <div class="link-center";>
    <%= render "devise/shared/links" %>
  </div>

</div>
